{
  "manifest_version": 3,
  "name": "Fantasy Football AI Predictor",
  "short_name": "FF AI Predictor",
  "version": "1.0.0",
  "description": "Transformer-powered fantasy predictions with Next Gen Stats (Edge compatible)",
  
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  
  "host_permissions": [
    "https://football.fantasysports.yahoo.com/*",
    "https://fantasy.espn.com/*",
    "https://sleeper.com/*",
    "https://*.sleeper.com/*",
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [{
    "matches": [
      "https://football.fantasysports.yahoo.com/*",
      "https://fantasy.espn.com/*"
    ],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_idle"
  }]
}
