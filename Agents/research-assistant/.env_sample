# LLM (Ollama)
OLLAMA_MODEL=gpt-oss

# Vector store
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=research-assistant-chunks

# Email
SENDGRID_API_KEY=
FROM_EMAIL=sample@gmail.com
TO_EMAIL=sample@gmail.com

# Paths
USER_PROFILE_PATH=data/user_profile.json
CORPUS_DIR=data/raw_pdfs/
CHUNKS_DIR=data/chunks/

# Runtime
PYTHONPATH=src
DRY_RUN=false
SBERT_MODEL=all-MiniLM-L6-v2
LOG_LEVEL=INFO
LOG_FORMAT=plain

# Digest
DIGEST_QUERY=latest research
DIGEST_LIMIT=5
DIGEST_PER_PAPER_SENTENCES=3
DIGEST_OVERALL_SENTENCES=6
DIGEST_USE_LLM=true