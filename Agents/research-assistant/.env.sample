# Core paths (inside container these default to /data/...)
CORPUS_DIR=data/raw_pdfs
CHUNKS_DIR=data/chunks
SEEN_RSS_PATH=data/state/arxiv_seen.jsonl
SEEN_PATH=data/state/embedded.jsonl

# Digest config
DIGEST_QUERY=latest research in NLP
DIGEST_LIMIT=5
DIGEST_PER_PAPER_SENTENCES=3
DIGEST_OVERALL_SENTENCES=6
DIGEST_SUBJECT=Research Assistant Digest
DIGEST_USE_LLM=false

# Email (SendGrid)
FROM_EMAIL=you@example.com
TO_EMAILS=you@example.com
SENDGRID_API_KEY=
DRY_RUN=true

# Pinecone (optional; retrieval and upsert)
PINECONE_API_KEY=
PINECONE_INDEX_NAME=research-assistant
PINECONE_ENVIRONMENT=us-east-1

# LLM (Ollama) if using summaries via LLM
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b-instruct
